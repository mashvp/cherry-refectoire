{
  "extends": "next/core-web-vitals",
  "plugins": ["simple-import-sort"],
  "rules": {
    "jsx-a11y/alt-text": 0,
    "semi": [2, "always"],
    "simple-import-sort/exports": "error",
    "simple-import-sort/imports": "error",
    "max-len": [
      "error",
      { "code": 80, "tabWidth": 2, "ignorePattern": "^import .*" }
    ]
  }
}
